<style type="text/css">
    #chartdivLeaveStatus {
        width: 100%;
        height: 200px;
    }

    #chartdivAttendancePer {
        width: 100%;
        height: 405px;
    }

    #grdEmployeeLeaveAllocationSummary .k-header, #grdEmployeeLeaveTakenSummary .k-header, #grdEmployeeAttendanceSummary .k-header, #grdPendingLeaveApprovalSummary .k-header {
        text-align: center !important;
