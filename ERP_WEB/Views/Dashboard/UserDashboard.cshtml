    #divAttendance .form-horizontal .form-group {
        margin-right: 0 !important;
        margin-left: 0 !important;
    }

    #grphOrderStatus {
        width: 100%;
        height: 300px;
    }

    #grphOrderStatus2 {
        width: 100%;
