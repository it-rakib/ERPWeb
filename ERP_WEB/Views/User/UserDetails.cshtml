@Scripts.Render("~/Scripts/Core/User/UserDetails.js")

<div class="bs-example">
    <div class="well well-sm">
        User Details
    </div>
    <div id="tabstrip">
        <ul>
            <li id="tab1">
                User Info
            </li>
            <li class="k-state-active">
                Menu Permission
            </li>
            <li>
                Report Permission
            </li>
        </ul>
        <div>
            @Html.Partial("UserInfo")
        </div>
        <div>
            @Html.Partial("UserMenuPermission")
        </div>
        <div>
            @Html.Partial("UserReportPermission")
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-md-12">
            <ul class="list-group ">
                <li class="list-group-item centerAlign">
                    <button id="btnSaveUser" class="k-button-success" type="button"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
                    <button id="btnClear" class="k-button-danger" type="button"><span class="glyphicon glyphicon-repeat"></span> Clear</button>
                </li>
            </ul>
        </div>
    </div>
</div>
