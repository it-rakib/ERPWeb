@Scripts.Render("~/Scripts/Land/FileCodeInfo/FileCodeInfoDetails.js")
<div class="bs-example">
    <div class="well well-sm">FileCode Information</div>
    <div id="menuDetailsDiv" class="row">
        <div class="col-md-12 col-xs-12">
            <div class="form-horizontal">
                <div class="form-group">
                    <input type="hidden" id="hdnFileCodeInfoId" value="00000000-0000-0000-0000-000000000000" />
                    <label class="col-md-4 col-xs-4 control-label" for="txtFileCodeInfoName" style="margin-top : 5px;">Name:</label>
                    <div class="col-md-6 col-xs-6">
                        <input type="text" placeholder="FileCodeInfo Name..." name="txtFileCodeInfoName" id="txtFileCodeInfoName" class="form-control" style="margin-top:2px;" required validationmessage="*" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 col-xs-4 control-label" for="txtFileCodeInfoFullName" style="margin-top : 5px;">Full Name:</label>
                    <div class="col-md-6 col-xs-6">
                        <input type="text" placeholder="FileCodeInfo Full Name..." name="txtFileCodeInfoFullName" id="txtFileCodeInfoFullName" class="form-control" style="margin-top:2px;" required validationmessage="*" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 col-xs-4 control-label" for="chkIsActive"> Is Active?</label>
                    <div class="col-md-6 col-xs-6">
                        <input type="checkbox" id="chkIsActive" name="chkIsActive" value="chkIsActive">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <ul class="list-group ">
                            <li class="list-group-item centerAlign">
                                <button id="btnSave" class="btn btn-primary" type="button">Save</button>
                                <button id="btnClearAll" class="btn btn-primary">Clear</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
