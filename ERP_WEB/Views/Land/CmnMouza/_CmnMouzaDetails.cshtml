@Scripts.Render("~/Scripts/Land/CmnMouza/CmnMouzaDetails.js")
<div class="bs-example">
    <div class="well well-sm">Mouza Information</div>
    <div id="menuDetailsDiv" class="row">
        <div class="col-md-12 col-xs-12">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-md-4 col-xs-4 control-label" style="margin-top : 4px" for="cmbCmnDivision">Division:</label>
                    <div class="col-md-6 col-xs-6">
                        <input id="cmbCmnDivision" placeholder="--Select Division--" style="width: 100%; height:28px;" required validationmessage="*" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 col-xs-4 control-label" style="margin-top : 4px" for="cmbCmnDistrict">District:</label>
                    <div class="col-md-6 col-xs-6">
                        <input id="cmbCmnDistrict" placeholder="--Select District--" style="width: 100%; height:28px;" required validationmessage="*" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 col-xs-4 control-label" style="margin-top : 4px" for="cmbCmnUpozila">Upozila:</label>
                    <div class="col-md-6 col-xs-6">
                        <input id="cmbCmnUpozila" placeholder="--Select Upozila--" style="width: 100%; height:28px;" required validationmessage="*" />
                    </div>
                </div>

                <div class="form-group">
                    <input type="hidden" id="hdnCmnMouzaId" value="00000000-0000-0000-0000-000000000000" />
                    <label class="col-md-4 col-xs-4 control-label" for="txtCmnMouzaName" style="margin-top : 5px;">Mouza Name:</label>
                    <div class="col-md-6 col-xs-6">
                        <input type="text" placeholder="Mouza Name.." name="txtCmnMouzaName" id="txtCmnMouzaName" class="form-control" style="margin-top:2px;" required validationmessage="*" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <ul class="list-group ">
                            <li class="list-group-item centerAlign">
                                <button id="btnSave" class="btn btn-primary" type="button">Save</button>
                                <button id="btnClearAll" class="btn btn-primary">Clear</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

