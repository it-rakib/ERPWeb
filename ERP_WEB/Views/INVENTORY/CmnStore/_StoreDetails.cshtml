@Scripts.Render("~/Scripts/INVENTORY/CmnStore/StoreDetails.js")
<div class="bs-example">
    <div class="well well-sm">Store Details</div>
    <div id="menuDetailsDiv" class="row">
        <div class="col-md-12 col-xs-12">
            <div class="form-horizontal">
                <div class="form-group">
                    <input type="hidden" id="hdnStoreId"/>
                    <label class="col-md-4 col-xs-4 control-label" for="txtStoreName">Store Name:</label>
                    <div class="col-md-6 col-xs-6">
                        <input type="text" placeholder="Store Name" name="txtStoreName" id="txtStoreName" class="form-control" style="width: 100%; height:28px;" required validationmessage="*" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 col-xs-4 control-label" for="txtStoreShortName">Store Short Name:</label>
                    <div class="col-md-6 col-xs-6">
                        <input type="text" placeholder="Store Short Name" name="txtStoreShortName" id="txtStoreShortName" class="form-control" style="width: 100%; height:28px;"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <ul class="list-group ">
                            <li class="list-group-item centerAlign">
                                <button id="btnSave" class="btn btn-primary" type="button">Save</button>
                                <button id="btnClearAll" class="btn btn-primary">Clear</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





