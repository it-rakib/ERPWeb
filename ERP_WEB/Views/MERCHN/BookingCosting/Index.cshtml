
@{
    ViewBag.Title = "Booking Costing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .row {
        margin-bottom: 5px;
    }

    .k-grid .k-hierarchy-col {
        width: 5px;
    }

    .editable {
        background-color: skyblue;
    }

    .non-editable {
        pointer-events: none;
        opacity: 0.8;
    }
</style>

@{ string jsVer = @System.Configuration.ConfigurationManager.AppSettings["JSVer"];}
@Scripts.Render("~/Scripts/MERCHN/BookingCosting/BookingCostingSettings.js?" + @jsVer)

<div class="row">
    <div id="divBookingCostingSummary" class="col-lg-12">
        @Html.Partial("../MERCHN/BookingCosting/_BookingCostingSummary")
    </div>
    <div id="divBookingCostingDetails" class="col-lg-12 displayNone">
        @Html.Partial("../MERCHN/BookingCosting/_BookingCosting")
    </div>
</div>

