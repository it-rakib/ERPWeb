@Scripts.Render("~/Scripts/MERCHN/CmnBankBranch/CmnBankBranchDetails.js")

<div class="bs-example">
    <div class="well well-sm">Branch Details</div>
    <div id="menuDetailsDiv" class="row">
        <div class="col-md-12 col-xs-12">
            <div class="form-horizontal">
                <div class="form-group">
                    <input type="hidden" id="hdnBranchId" value="00000000-0000-0000-0000-000000000000" />
                    <label class="col-md-4 col-xs-4 control-label" for="txtBranchName">Branch Name:</label>
                    <div class="col-md-6 col-xs-6">
                        <input type="text" placeholder="Branch Name" name="txtBranchName" id="txtBranchName" class="form-control" required validationmessage="Branch Name Required!" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 col-xs-4 control-label" for="txtBranchAddress">Address:</label>
                    <div class="col-md-6 col-xs-6">
                        <textarea type="text" placeholder="Branch Address..." name="txtBranchAddress" id="txtBranchAddress" style="margin-top:2px;" class="form-control" required validationmessage="Address Required!"></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <ul class="list-group ">
                            <li class="list-group-item centerAlign">
                                <button id="btnSave" class="btn btn-primary" type="button">Save</button>
                                <button id="btnClearAll" class="btn btn-primary">Clear</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
