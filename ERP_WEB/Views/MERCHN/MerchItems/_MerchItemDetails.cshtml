@Scripts.Render("~/Scripts/MERCHN/MerchItems/MerchItemDetails.js")

<div class="bs-example">
    <div class="well well-sm">Item Details</div>
    <div id="menuDetailsDiv" class="row">
        <div class="col-md-12 col-xs-12">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-md-4 col-xs-4 control-label" style="margin-bottom :4px;" for="itemGroup">Item Group:</label>
                    <div class="col-md-6 col-xs-6">
                        <input id="cmbGroup" placeholder="Group Name..." style="width: 100%; height:28px;" required validationmessage="*" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 col-xs-4 control-label" style="margin-bottom :4px;" for="itemCategory">Item Category:</label>
                    <div class="col-md-6 col-xs-6">
                        <input id="cmbCategory" placeholder="Category Name..." style="width: 100%; height:28px;" required validationmessage="*" />
                    </div>
                </div>
                <div class="form-group">
                    <input type="hidden" id="hdnItemId" value="00000000-0000-0000-0000-000000000000" />
                    <label class="col-md-4 col-xs-4 control-label" for="txtItemName">Item Name:</label>
                    <div class="col-md-6 col-xs-6">
                        <input type="text" placeholder="Item Name" name="txtItemName" id="txtItemName" style="width: 100%; height:28px;" class="form-control" required validationmessage="*" />
                    </div>
                </div>

                <label class="col-md-4 col-xs-4 control-label" for="txtIsActive" style="margin-bottom:6px;">Is Active :</label>
                <div class="col-md-6 col-xs-6">
                    <input type="checkbox" id="txtIsActive">
                </div>

                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <ul class="list-group ">
                            <li class="list-group-item centerAlign">
                                <button id="btnSave" class="btn btn-primary" type="button">Save</button>
                                <button id="btnClearAll" class="btn btn-primary">Clear</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





