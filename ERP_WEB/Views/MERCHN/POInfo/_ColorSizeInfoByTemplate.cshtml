<style>
    .close {
        position: relative;
        right: 7px;
        top: -14px;
        width: 12px;
        height: 12px;
        opacity: 0.3;
    }

    .close:hover {
        opacity: 1;

    }

        .close:before, .close:after {
            position: absolute;
            left: 15px;
            content: ' ';
            height: 10px;
            width: 2px;
            /*        background-color: #333;*/ 
            background-color: red;
        }

    .close:before {
        transform: rotate(45deg);
    }

    .close:after {
        transform: rotate(-45deg);
    }
</style>

