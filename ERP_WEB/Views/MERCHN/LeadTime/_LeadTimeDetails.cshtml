@Scripts.Render("~/Scripts/MERCHN/LeadTime/LeadTimeDetails.js")
<div class="bs-example">
    <div class="well well-sm">Lead Time Details</div>
    <div id="menuDetailsDiv" class="row">
        <div class="col-md-12 col-xs-12">
            <div class="form-horizontal">
                <div class="form-group">
                    <input type="hidden" id="hdnLeadTimeId" value="00000000-0000-0000-0000-000000000000" />
                    <label class="col-md-4 col-xs-4 control-label" for="txtLeadTimeName" style="margin-top : 5px;">Lead Time Name:</label>
                    <div class="col-md-6 col-xs-6">
                        <input type="text" placeholder="Lead Time Name" name="txtLeadTimeName" id="txtLeadTimeName" class="form-control" style="margin-top:2px;" required validationmessage="*" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 col-xs-4 control-label" style="margin-top : 4px" for="Buyer">Buyer :</label>
                    <div class="col-md-6 col-xs-6">
                        <input id="cmbBuyer" placeholder="Buyer Name..." style="width: 100%; height:28px;" required validationmessage="*" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 col-xs-4 control-label" style="margin-top : 4px" for="Brand">Brand :</label>
                    <div class="col-md-6 col-xs-6">
                        <input id="cmbBrand" placeholder="Brand Name..." style="width: 100%; height:28px;" required validationmessage="*" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 col-xs-4 control-label" style="margin-top : 4px" for="Department">Department :</label>
                    <div class="col-md-6 col-xs-6">
                        <input id="cmbDepartment" placeholder="Department Name..." style="width: 100%; height:28px;" required validationmessage="*" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 col-xs-4 control-label" for="chkIsActive" style="margin-bottom : 2px;">Is Active :</label>
                    <div class="col-md-6 col-xs-6">
                        <input type="checkbox" id="chkIsActive">
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <ul class="list-group ">
                            <li class="list-group-item centerAlign">
                                <button id="btnSave" class="btn btn-primary" type="button">Save</button>
                                <button id="btnClearAll" class="btn btn-primary">Clear</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
