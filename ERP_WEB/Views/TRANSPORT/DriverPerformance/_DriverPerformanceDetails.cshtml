@Scripts.Render("~/Scripts/TRANSPORT/DriverPerformance/DriverPerformanceDetails.js")
<style>

    .k-multiselect-wrap, .k-floatwrap {
        height: 34px;
    }
</style>
<div class="bs-example">
    <div class="well well-sm">Performance Details</div>
    <div id="menuDetailsDiv" class="row">
        <div class="col-md-12 col-xs-12">
            <div class="form-horizontal">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="hidden" id="hdnDriverPerformanceId" value="0" />
                            <label class="col-md-4 col-xs-4 control-label" for="cmbDriver">Driver:</label>
                            <div class="col-md-6 col-xs-6 comboBox">
                                <input id="cmbDriver" placeholder="--Select Driver--" style="width: 100%; height: 34px;" required validationmessage="*" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="cmbSalaryStatus">Salary Status:</label>
                            <div class="col-md-6 col-xs-6 comboBox">
                                <input id="cmbSalaryStatus" placeholder="--Select Salary Status--" style="width: 100%; height: 34px;" required validationmessage="*" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="cmbOverTimeStatus">OverTime Status:</label>
                            <div class="col-md-6 col-xs-6 comboBox">
                                <input id="cmbOverTimeStatus" placeholder="--Select Status--" style="width: 100%; height: 34px;" required validationmessage="*" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" style="margin-bottom: 6px" for="txtOverTimePayment">OverTime Payment:</label>
                            <div class="">
                                <input type="text" placeholder="OverTime Payment" name="txtOverTimePayment" id="txtOverTimePayment" style=" width: 46.6%; height: 34px; margin-left: 15px;" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" style="margin-bottom: 6px" for="txtPerformanceBonus">Performance Bonus:</label>
                            <div class=" col-md-6 col-xs-6">
                                <input type="text" placeholder="Performance Bonus" name="txtPerformanceBonus" id="txtPerformanceBonus" style="width: 100%; height: 34px;" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" style="margin-bottom: 6px" for="txtPenaltyAmount">Penalty Amount:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" placeholder="Penalty Amount" name="txtPenaltyAmount" id="txtPenaltyAmount" style="width: 100%; height: 34px; " />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="txtPenaltyReason">Penalty Reason:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" placeholder="Penalty Reason" name="txtPenaltyReason" class="form-control" id="txtPenaltyReason" style="width: 100%; height: 34px; " />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" style="margin-bottom: 6px;" for="txtPenaltyDate">Penalty Date:</label>
                            <div class="col-md-6 col-xs-6">
                                <input id="txtPenaltyDate" type="text" placeholder="Penalty Date" name="txtPenaltyDate" style="width: 100%; height: 34px;" "  />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <ul class="list-group ">
                            <li class="list-group-item centerAlign">
                                <button id="btnSave" class="btn btn-primary" type="button">Save</button>
                                <button id="btnClearAll" class="btn btn-primary">Clear</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




