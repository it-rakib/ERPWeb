@Scripts.Render("~/Scripts/TRANSPORT/VehicleModel/VehicleModelDetails.js")
<div class="bs-example">
    <div class="well well-sm">Vehicle Model Details</div>
    <div id="menuDetailsDiv" class="row">
        <div class="col-md-12 col-xs-12">
            <div class="form-horizontal">
                <div class="form-group">
                    <input type="hidden" id="hdnModelId" value="0" />
                    <label class="col-md-4 col-xs-4 control-label" for="txtModelName">Model Name :</label>
                    <div class="col-md-6 col-xs-6">
                        <input type="text" placeholder="Model Name" name="txtModelName" id="txtModelName" class="form-control" style="width: 100%; height:28px;" required validationmessage="*" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-4 col-xs-4 control-label" for="brand">Brand :</label>
                    <div class="col-md-6 col-xs-6">
                        <input id="cmbBrand" placeholder="Brand Name..." style="width: 100%; height:28px;" required validationmessage="*" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <ul class="list-group ">
                            <li class="list-group-item centerAlign">
                                <button id="btnSave" class="btn btn-primary" type="button">Save</button>
                                <button id="btnClearAll" class="btn btn-primary">Clear</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


