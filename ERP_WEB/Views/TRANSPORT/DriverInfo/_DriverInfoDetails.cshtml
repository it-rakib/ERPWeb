@Scripts.Render("~/Scripts/TRANSPORT/DriverInfo/DriverInfoDetails.js")
<style>

    .k-multiselect-wrap, .k-floatwrap {
        height: 34px;
    }
</style>
<div class="bs-example">
    <div class="well well-sm">Driver Details</div>
    <div id="menuDetailsDiv" class="row">
        <div class="col-md-12 col-xs-12">
            <div class="form-horizontal">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="hidden" id="hdnDriverId" value="0" />
                            <label class="col-md-4 col-xs-4 control-label" for="txtDriverName">Driver Name:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" placeholder="Driver Name" name="txtDriverName" id="txtDriverName" class="form-control" required validationmessage="*" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="cmbEmp">Employee:</label>
                            <div class="col-md-6 col-xs-6 comboBox">
                                <input id="cmbEmp" placeholder="--Select Employee--" style="width: 100%; height: 34px;" required validationmessage="*" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="txtManualId">Manual Id:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" placeholder="Manual Id..." name="txtManualId" id="txtManualId" class="form-control" required validationmessage="*" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="txtLicenseNumber">License Number:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" placeholder="License Number..." name="txtLicenseNumber" id="txtLicenseNumber" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="cmbLicenseType">License Type:</label>
                            <div class="col-md-6 col-xs-6 comboBox">
                                <input id="cmbLicenseType" placeholder="--Select License Type--" style="width: 100%; height: 34px;" required validationmessage="*" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" style="margin-bottom: 6px;" for="txtLicenseIssueDate">License Issue Date:</label>
                            <div class="col-md-6 col-xs-6">
                                <input id="txtLicenseIssueDate" type="text" placeholder="License Issue Date" name="txtLicenseIssueDate" style="width: 100%; height: 34px;" required validationmessage="*" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" style="margin-bottom: 6px;" for="txtLicenseExpiredDate">License Expired Date:</label>
                            <div class="col-md-6 col-xs-6">
                                <input id="txtLicenseExpiredDate" type="text" placeholder="License Expired Date" name="txtLicenseExpiredDate" style="width: 100%; height: 34px;" required validationmessage="*" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="txtDriverExperience">Driver Experience:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" placeholder="Driver Experience" name="txtDriverExperience" id="txtDriverExperience" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="cmbDutyType">Duty Type:</label>
                            <div class="col-md-6 col-xs-6 comboBox">
                                <input id="cmbDutyType" placeholder="--Select Duty Type--" style="width: 100%; height: 34px;" required validationmessage="*" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" style="margin-bottom: 6px;" for="txtWorkTime">Work Time:</label>
                            <div class="col-md-6 col-xs-6">
                                <input id="txtWorkTime" type="text" placeholder="Work Time" name="txtWorkTime" style="width: 100%; height: 34px;" required validationmessage="*" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="txtDriverContact">Driver Contact:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" placeholder="Driver Contact" name="txtDriverContact" id="txtDriverContact" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group" style="margin-left: 230px;">
                            <label for="chkIsActive" style="margin-left: 0px"> Is Active:</label>
                            <input type="checkbox" id="chkIsActive" name="chkIsActive" value="chkIsActive" style="margin-left: 31px;">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <ul class="list-group ">
                            <li class="list-group-item centerAlign">
                                <button id="btnSave" class="btn btn-primary" type="button">Save</button>
                                <button id="btnClearAll" class="btn btn-primary">Clear</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



