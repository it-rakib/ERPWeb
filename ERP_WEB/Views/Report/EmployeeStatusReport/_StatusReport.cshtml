@Scripts.Render("~/Scripts/HRM/Reports/EmployeeStatusReport/StatusReport.js")

<div class="col-md-12 col-xs-12">
    <div class="col-md-12 col-xs-12 bs-example">
        <div class="col-md-12">
            <div class="row">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-3  control-label" for="cmbReportName">Select Report:</label>
                        <div class="col-md-9 ">
                            <input type="text" name="cmbReportName" style="width: 100%; height: 28px;" id="cmbReportName" required validationmessage="Required">
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="col-md-12 col-xs-12 displayNone" id="divEmpStatus">
    <div class="col-md-12 col-xs-12 bs-example">
        <div class="well well-sm">
            Employee Information Report
        </div>
        <div class="col-md-12">
            <div class="row">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-3  control-label" for="txtFromDate" id="lblFromDate">From Date:</label>
                        <div class="col-md-9 ">
                            <input type="text" name="txtFromDate" style="width: 100%; height: 28px;" id="txtFromDate" required validationmessage="Required">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3  control-label" for="txtToDate" id="lblToDate">To Date:</label>
                        <div class="col-md-9 ">
                            <input type="text" name="txtToDate" style="width: 100%; height: 28px;" id="txtToDate" required validationmessage="Required">
                        </div>
                    </div>
                    <div class="form-group" id="seperationTypecombo">
                        <label class="col-md-3  control-label" for="cmbSeperationType">Seperation Type:</label>
                        <div class="col-md-9 ">
                            <input type="text" name="cmbSeperationType" style="width: 100%; height: 28px;" id="cmbSeperationType">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="spacer5"></div>
                <ul class="list-group ">
                    <li class="list-group-item centerAlign">
                        <button id="btnNewJoinerReport" class="k-button-linkbutton" type="button">New Joiner Employee</button>
                    </li>
                    <li class="list-group-item centerAlign">
                        <button id="btnSeperatedEmpReport" class="k-button-linkbutton" type="button">Seperated Employee</button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12 col-xs-12 displayNone" id="divGReport">
    <div class="col-md-12 col-xs-12 bs-example">
        <div class="well well-sm">
            Generate ID Card
        </div>
        <div class="col-md-12">
            <div class="row">
                <div class="spacer5"></div>
                <ul class="list-group ">
                    <li class="list-group-item centerAlign">
                        <button id="btnGenerateEmpIDCard" class="k-button-linkbutton" type="button">Employee ID Card</button>
                    </li>

                </ul>
            </div>
        </div>
    </div>
</div>





