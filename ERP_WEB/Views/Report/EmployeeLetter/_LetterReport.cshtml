@Scripts.Render("~/Scripts/HRM/Reports/EmployeeLetter/LetterReport.js")
<div class="col-md-12 col-xs-12">
    <div class="well well-sm">
        Employee Letter
    </div>
    <div class="col-md-12 col-xs-12 bs-example">
        <div class="col-md-12">

            <div class="row">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-3  control-label" for="cmbReportName">Select Report:</label>
                        <div class="col-md-9 ">
                            <input type="text" name="cmbReportName" style="width: 100%; height: 28px;" id="cmbReportName" required validationmessage="Required">
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="col-md-12 col-xs-12 displayNone" id="divLetter1">
    <div class="well well-sm" id="lblLetterName">
        Termination Letter
    </div>
    <div class="col-md-12 col-xs-12 bs-example">

        <div class="col-md-12">
            <div class="row">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-3  control-label" for="txtPrintDate" id="lblPrintDate">Print Date:</label>
                        <div class="col-md-9 ">
                            <input type="text" name="txtPrintDate" style="width: 100%; height: 28px;" id="txtPrintDate" required validationmessage="Required">
                        </div>
                    </div>
                    <div class="form-group" id="divAcceptBy">
                        <label class="col-md-3  control-label" for="cmbAcceptBy">Accept By:</label>
                        <div class="col-md-9 ">
                            <input type="text" name="cmbAcceptBy" style="width: 100%; height: 28px;" id="cmbAcceptBy" required validationmessage="Required">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="spacer5"></div>
                <ul class="list-group ">
                    <li class="list-group-item centerAlign">
                        <button id="btnGenerateReport" class="k-button-linkbutton" type="button">View & Print</button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>





