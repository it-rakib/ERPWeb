@Scripts.Render("~/Scripts/HRM/Reports/EmployeeIncrementReport/IncrementReport.js")

<div class="col-md-12 col-xs-12">
    <div class="col-md-12 col-xs-12 bs-example">
        <div class="col-md-12">
            <div class="row">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-3  control-label" for="cmbReportName">Select Report:</label>
                        <div class="col-md-9 ">
                            <input type="text" name="cmbReportName" style="width: 100%; height: 28px;" id="cmbReportName" required validationmessage="Required">
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="col-md-12 col-xs-12 displayNone" id="divIncrementHistory">
    <div class="col-md-12 col-xs-12 bs-example">
        <div class="well well-sm">
            Employee Incremetn History Report
        </div>
        <div class="col-md-12">
            <div class="row">
                <div class="form-horizontal">
                    <div class="form-group displayNone">
                        <label class="col-md-3  control-label" for="txtFromDate" id="lblFromDate">Effect Date From:</label>
                        <div class="col-md-9 ">
                            <input type="text" name="txtFromDate" style="width: 100%; height: 28px;" id="txtFromDate" required validationmessage="Required">
                        </div>
                    </div>
                    <div class="form-group displayNone">
                        <label class="col-md-3  control-label" for="txtToDate" id="lblToDate">Effect Date To:</label>
                        <div class="col-md-9 ">
                            <input type="text" name="txtToDate" style="width: 100%; height: 28px;" id="txtToDate" required validationmessage="Required">
                        </div>
                    </div>
                    <div class="form-group" id="incrementTypecombo">
                        <label class="col-md-3  control-label" for="cmbIncrementType">Increment Type:</label>
                        <div class="col-md-9 ">
                            <input type="text" name="cmbIncrementType" style="width: 100%; height: 28px;" id="cmbIncrementType">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="spacer5"></div>
                <ul class="list-group ">
                    <li class="list-group-item centerAlign">
                        <button id="btnIncrementReport" class="k-button-linkbutton" type="button">Increment History</button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>






