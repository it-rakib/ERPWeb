@{ string jsVer = @System.Configuration.ConfigurationManager.AppSettings["JSVer"];}
@Scripts.Render("~/Scripts/HRM/Reports/PayrollReport/PayrollReport.js?" + @jsVer)

<div class="col-md-12 col-xs-12">
    <div class="col-md-12 col-xs-12 bs-example">
        <div class="col-md-12">
            <div class="row">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-3  control-label" for="cmbReportName">Select Report:</label>
                        <div class="col-md-9 ">
                            <input type="text" name="cmbReportName" style="width: 100%; height: 28px;" id="cmbReportName" required validationmessage="Required">
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="col-md-12 col-xs-12 displayNone" id="divMonthlySalSheet">
    <div class="col-md-12 col-xs-12 bs-example">
        <div class="well well-sm" id="divHeader">
            Monthly Salary Sheet
        </div>
        <div class="col-md-12">
            <div class="row">
                <div class="form-horizontal">
                    <div class="form-group" id="divSalMonthYear">
                        <label class="col-md-3  control-label" for="txtMonthYear" id="lblSalMonthFrom">Select Month:</label>
                        <div class="col-md-9 ">
                            <input type="text" name="txtMonthYear" style="width: 100%; height: 28px;" id="txtMonthYear" required validationmessage="Required">
                        </div>
                    </div>
                    <div class="form-group displayNone" id="divSalMonthYearTo">
                        <label class="col-md-3  control-label" for="txtMonthYear">Month To:</label>
                        <div class="col-md-9 ">
                            <input type="text" name="txtMonthYearTo" style="width: 100%; height: 28px;" id="txtMonthYearTo" required validationmessage="Required">
                        </div>
                    </div>
                    <div class="form-group" id="divFestivalBonus">
                        <label class="col-md-3  control-label" for="txtBonusEffDate">Bonus Effect Date:</label>
                        <div class="col-md-9 ">
                            <input type="text" name="txtBonusEffDate" style="width: 100%; height: 28px;" id="txtBonusEffDate" required validationmessage="Required">
                        </div>
                    </div>
                    <div class="form-group" id="divWeekStartDate">
                        <label class="col-md-3 col-xs-12 control-label" for="txtWeekStartDate" id="IdWeekStartDate">Week Start Day:</label>
                        <div class="col-md-9 col-xs-12">
                            <input type="text" name="txtWeekStartDate" style="width: 100%; height: 28px;" id="txtWeekStartDate" required validationmessage="Required">
                        </div>
                    </div>
                    <div class="form-group" id="divWeekEndDate">
                        <label class="col-md-3 col-xs-12 control-label" for="txtWeekEndDate" id="IdWeekEndDate">Week End Day:</label>
                        <div class="col-md-9 col-xs-12">
                            <input type="text" name="txtWeekEndDate" style="width: 100%; height: 28px;" id="txtWeekEndDate" required validationmessage="Required" disabled="disabled">
                        </div>
                    </div>
                    <div class="form-group" id="divModeOfPayment">
                        <label class="col-md-3 col-xs-3 control-label" for="cmbPaymentMode">Mode of Payment:</label>
                        <div class="col-md-9 col-xs-9">
                            <input type="text" style="width: 100%; height: 28px;" name="cmbPaymentMode" id="cmbPaymentMode" required validationmessage="Required"/>
                        </div>
                    </div>
                    <div class="form-group" id="divcategory">
                        <label class="col-md-3 col-xs-3 control-label" for="cmbEmpType">Emp Type:</label>
                        <div class="col-md-9 col-xs-9">
                            <input type="text" style="width: 100%; height: 28px;" name="cmbEmpType" id="cmbEmpType" required validationmessage="Required" />
                        </div>
                    </div>

                    <div class="form-group" id="divActionDate">
                        <label class="col-md-3 col-xs-3 control-label" for="cmbActionDate">Action Date:</label>
                        <div class="col-md-9 col-xs-9">
                            <input type="text" style="width: 100%; height: 28px;" name="cmbActionDate" id="cmbActionDate"/>
                        </div>
                    </div>

                 

                </div>
            </div>

            <div class="row">
                <div class="spacer5"></div>
                <ul class="list-group ">
                    <li class="list-group-item centerAlign">
                        <button id="btnMonthlySalarySheetReport" class="btn btn-info" type="button">Show</button>
                        <button id="btnPrintReport" class="btn btn-sm btn-success" type="button"><span class="glyphicon glyphicon-export"></span> Excel</button>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

