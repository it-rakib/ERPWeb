
@Scripts.Render("~/Scripts/LEGAL/Lawyer_Info/LawyerDetails.js")

<div class="bs-example">
    <div class="well well-sm">Lawyer Details</div>
    <div id="menuDetailsDiv" class="row">
        <div class="col-md-12 col-xs-12">
            <div class="form-horizontal">
                <div class="row">
                    <div class="col-md-6 col-xs-6">
                        <div class="form-group">
                            <input type="hidden" id="hdnLawyerId" value="0" />
                            <label class="col-md-4 col-xs-4 control-label" for="txtLawyer">Lawyer Name:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" placeholder="Lawyer Name" name="txtLawyer" id="txtLawyer" class="form-control" required validationmessage="*" />
                            </div>
                        </div>
                        <div class="form-group" style="margin-top: 2px;">
                            <label class="col-md-4 col-xs-4 control-label" for="txtEmail">Email:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" placeholder="Email" name="txtEmail" id="txtEmail" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6  col-xs-6">
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="txtContact">Contact No:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" placeholder="Contact No" name="txtContact" id="txtContact" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" style="margin-top: 4px" for="txtAddress">Address:</label>
                            <div class="col-md-6 col-xs-6">
                                <textarea placeholder="Address" name="txtAddress" id="txtAddress" style="height:70px;" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <ul class="list-group ">
                            <li class="list-group-item centerAlign">
                                <button id="btnSave" class="btn btn-primary" type="button">Save</button>
                                <button id="btnClearAll" class="btn btn-primary">Clear</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



