@Scripts.Render("~/Scripts/LEGAL/Matter_Info/MatterInfoDetails.js")
<div class="bs-example">
    <div class="well well-sm">Matter Details</div>
    <div id="menuDetailsDiv" class="row">
        <div class="col-md-12 col-xs-12">
            <div class="form-horizontal">
                <div class="row">
                    <div class="form-group">
                        <input type="hidden" id="hdnMatterId" value="0" />
                        <label class="col-md-4 col-xs-4 control-label" for="txtMatter">Matter :</label>
                        <div class="col-md-6 col-xs-6">
                            <input type="text" placeholder="Matter Name" name="txtMatter" id="txtMatter" class="form-control" required validationmessage="*" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 col-xs-4 control-label" style="margin-top: 4px" for="txtDescription">Description :</label>
                        <div class="col-md-6 col-xs-6">
                            <textarea placeholder="Description" name="txtDescription" id="txtDescription" style="height:89px;" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <ul class="list-group ">
                            <li class="list-group-item centerAlign">
                                <button id="btnSave" class="btn btn-primary" type="button">Save</button>
                                <button id="btnClearAll" class="btn btn-primary">Clear</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


