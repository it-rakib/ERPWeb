@Scripts.Render("~/Scripts/LEGAL/Court_Info/CourtInfoDetails.js")
<style>

    .k-multiselect-wrap,.k-floatwrap{
        height : 34px;
    }
</style>
<div class="bs-example">
    <div class="well well-sm">Court Details</div>
    <div id="menuDetailsDiv" class="row">
        <div class="col-md-12 col-xs-12">
            <div class="form-horizontal">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="hidden" id="hdnCourtId" value="0" />
                            <label class="col-md-4 col-xs-4 control-label" for="txtCourtInfo">Court Name:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" placeholder="Court Name" name="txtCourtInfo" id="txtCourtInfo" class="form-control" required validationmessage="*" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="txtCourtNo">Court No:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" placeholder="Court No" name="txtCourtNo" id="txtCourtNo" class="form-control" required validationmessage="*" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="txtEmail">Email:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" placeholder="Email" name="txtEmail" id="txtEmail" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="txtWebsite">Website:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" placeholder="Website" name="txtWebsite" id="txtWebsite" class="form-control" />
                            </div>
                        </div>                        
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="txtPhone">Phone:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" placeholder="Phone" name="txtPhone" id="txtPhone" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="txtFax">Fax:</label>
                            <div class="col-md-6 col-xs-6">
                                <input type="text" placeholder="Fax" name="txtFax" id="txtFax" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="cmbDistrict">District:</label>
                            <div class="col-md-6 col-xs-6 comboBox">
                                <input id="cmbDistrict" placeholder="--Select District--" style="width: 100%; height: 34px;" required validationmessage="*"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 col-xs-4 control-label" for="cmbJurisdiction">Jurisdiction:</label>
                            <div class="col-md-6 col-xs-6">
                                <input id="cmbJurisdiction" placeholder="--Select Jurisdiction--" style="width: 100%; height: 34px;" required validationmessage="*" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <ul class="list-group ">
                            <li class="list-group-item centerAlign">
                                <button id="btnSave" class="btn btn-primary" type="button">Save</button>
                                <button id="btnClearAll" class="btn btn-primary">Clear</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


