@Scripts.Render("~/Scripts/LEGAL/Case_Type/CaseTypeDetails.js")
<div class="bs-example">
    <div class="well well-sm">Case Type Details</div>
    <div id="menuDetailsDiv" class="row">
        <div class="col-md-12 col-xs-12">
            <div class="form-horizontal">
                <div class="form-group">
                    <input type="hidden" id="hdnCaseTypeId" value="0" />
                    <label class="col-md-4 col-xs-4 control-label" for="txtCaseType">Case Type:</label>
                    <div class="col-md-6 col-xs-6">
                        <input type="text" placeholder="Case Type" name="txtCaseType" id="txtCaseType" class="form-control" required validationmessage="*" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <ul class="list-group ">
                            <li class="list-group-item centerAlign">
                                <button id="btnSave" class="btn btn-primary" type="button">Save</button>
                                <button id="btnClearAll" class="btn btn-primary">Clear</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
