@{
    ViewBag.Title = "Case Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/LEGAL/CaseReports/CaseReports.js"></script>

<div class="row">
    <div class="col-md-12 col-xs-12">
        <div class="bs-example">
            <div class="well well-sm">
                Case Report
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="bs-example" style="margin-left: 0px; height: 140px;">
                            @*<div class="well well-sm">
            Salect Options
        </div>*@
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label" style="margin-bottom: 6px;" for="cmbFileType">File Type:</label>
                                    <div class="comboBox">
                                        <input id="cmbFileType" placeholder="--Select File Type--" style="width: 60%; height: 28px;" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label" style="margin-bottom: 6px;" for="cmbStatus">Status:</label>
                                    <div class="comboBox">
                                        <input id="cmbStatus" placeholder="--Select Status--" style="width: 60%; height: 28px;" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label" style="margin-bottom: 6px;" for="cmbCourt">Court:</label>
                                    <div class="comboBox">
                                        <input id="cmbCourt" placeholder="--Select Court--" style="width: 60%; height: 28px;" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label" style="margin-bottom: 6px;" for="cmbUnit">Reference:</label>
                                    <div class="comboBox">
                                        <input id="cmbUnit" placeholder="--Select Reference--" style="width: 60%; height: 28px;" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label" style="margin-bottom: 6px;" for="cmbAssignLawyer">AssignLawyer:</label>
                                    <div class="comboBox">
                                        <input id="cmbAssignLawyer" placeholder="--Select Assign Lawyer--" style="width: 60%; height: 28px;" />
                                    </div>
                                </div>
                                <div class="form-group" style="margin-top: 26px; margin-left: 9px;">
                                    <label for="chkIsPublish" style="margin-left: -22px;"> Is Publish:</label>
                                    <input type="checkbox" id="chkIsPublish" name="chkIsPublish" value="chkIsPublish" style="margin-left: 31px;">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label" style="margin-bottom: 6px;" for="cmbDistrict">District:</label>
                                    <div class="comboBox">
                                        <input id="cmbDistrict" placeholder="--Select District--" style="width: 60%; height: 28px;" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label" style="margin-bottom: 6px;" for="cmbMatter">Matter:</label>
                                    <div class="comboBox">
                                        <input id="cmbMatter" placeholder="--Select Matter--" style="width: 60%; height: 28px;" />
                                    </div>
                                </div>
                            </div>

                        </div>
                        </div>
                </div>
                @*<div class="row">
                    <div id="divExpenseReportGrid" class="col-md-12">
                        <div class="bs-example">
                            <div class="well well-sm">
                                Case Summary
                            </div>
                            <div class="panel-body">
                                <div id="grdCaseRpt">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>*@
                <div class="row">
                    <div class="col-md-12 col-xs-12">
                        <ul class="list-group ">
                            <li class="list-group-item centerAlign">
                                <button id="btnForRpt" class="btn btn-primary" type="button">Generate Report</button>
                                @*<button id="btnShow" class="btn btn-primary">Show</button>*@
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
